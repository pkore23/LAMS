<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beproject.lams.OptionsActivityFragment"
    tools:showIn="@layout/activity_options"
    android:background="@color/colorBg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/new_lec"
        android:id="@+id/newLec"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="350px"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/stud_attd_rep"
        android:id="@+id/studRep"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20px"
        android:layout_below="@+id/newLec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="350px"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subj_attd_rep"
        android:id="@+id/subjRep"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20px"
        android:layout_below="@+id/newLec"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mentor_stud"
        android:id="@+id/mentor"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20px"
        android:layout_below="@+id/studRep"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/acc_sett"
        android:id="@+id/acc_sett"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20px"
        android:layout_below="@+id/mentor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
