<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beproject.lams.OptionsActivityFragment"
    tools:showIn="@layout/activity_options">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/opt_card_height"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/new_lec"
        android:id="@+id/newLec"
        android:theme="@style/AppTheme.OptionsTheme"/>


    <TextView
        android:layout_width="@dimen/opt_card_width"
        android:layout_height="@dimen/opt_card_height"
        android:text="@string/stud_attd_rep"
        android:id="@+id/studRep"
        android:theme="@style/AppTheme.OptionsTheme"/>

    <TextView
        android:layout_width="@dimen/opt_card_width"
        android:layout_height="@dimen/opt_card_height"
        android:text="@string/subj_attd_rep"
        android:id="@+id/subjRep"
        android:layout_toRightOf="@+id/studRep"
        android:theme="@style/AppTheme.OptionsTheme"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/opt_card_height"
        android:text="@string/mentor_stud"
        android:id="@+id/mentor"
        android:theme="@style/AppTheme.OptionsTheme"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/opt_card_height"
        android:text="@string/acc_sett"
        android:id="@+id/acc_sett"
        android:theme="@style/AppTheme.OptionsTheme"/>


</RelativeLayout>
