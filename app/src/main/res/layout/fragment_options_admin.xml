<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beproject.lams.OptionsActivityFragment"
    tools:showIn="@layout/activity_options_admin"
    android:background="@color/colorBg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/opt_card_height"
        android:elevation="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mod_acc"
        android:id="@+id/newLec"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="@dimen/opt_card_width"
        android:layout_height="@dimen/opt_card_height"
        android:elevation="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/new_std"
        android:id="@+id/studRep"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="@dimen/opt_card_margin"
        android:layout_below="@+id/newLec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="@dimen/opt_card_width"
        android:layout_height="@dimen/opt_card_height"
        android:elevation="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/new_stf"
        android:id="@+id/subjRep"
        android:layout_toRightOf="@+id/studRep"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="@dimen/opt_card_margin"
        android:layout_marginLeft="@dimen/opt_card_margin"
        android:layout_below="@+id/newLec"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/opt_card_height"
        android:elevation="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/acc_sett"
        android:id="@+id/mentor"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="@dimen/opt_card_margin"
        android:layout_below="@+id/studRep"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
